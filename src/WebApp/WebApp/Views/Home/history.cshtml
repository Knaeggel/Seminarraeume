@{
}

<div class="overviewAndmyrooms card">

        <div class="card-header">
            <h2>Vergangene Reservierungen</h2>
        </div>

        <div class="card-body">
        <table class="myrooms table table-dark table-hover table-sm">
            <tr>
                <th scope="col">#</th>
                <th scope="col">Date</th>
                <th scope="col">Room</th>
                <th scope="col">Time</th>

            </tr>

        @{
            //list of tickets
            int i = 1;
            foreach (var item in ViewBag.Tickets)
            {
                <tr class="@item.getClass()">
                    <td scope="row">@i</td>
                    <td>@item.sDate</td>
                    <td>@item.Room</td>
                    <td>@item.times</td>
                </tr>
                i++;
            }
        }

        </table>
        </div>

        <div class="card-footer">
            <form asp-action = "räume">
                <button type="submit" class="btn btn-primary form-group">+ Ticket</button>
            </form>
        </div>
    </div>