@model SearchValues

<div class="homeSite container">
    <div class="row">
        

        <form asp-action="DateSearch">
            <div class="col">
                <div class="search card">
                    <div class="card-header">
                        <h1>Suche</h1>
                    </div>
                      <!--Search-->
                    <div class="card-body">
                        <div class="form-group">
                            <label for="Building">Gebäude</label>
                            <select id="Building" name="Building" class="form-select" asp-for="Building" size="1" aria-label="">
                                <option value="all" selected>All</option>
                                <option value="A">A</option>
                                <option value="B">B</option>
                                <option value="C">C</option>
                                <option value="D">D</option>
                                <option value="E">E</option>
                            </select>
                        </div>

                        <div class="form-group">
                            <label for="room">Raumnummer</label>
                            <input id="RoomName" type="text" name="room" class="room form-control" asp-for="Roomnumber" required>
                        </div>

                        <div class="form-group">
                            <label for="seats">Anzahl Sitzplätze</label>
                            <input id="RoomSize" type="text" name="seats" class="seats form-control" asp-for="room.RoomSize" required>
                        </div>

                        <div class="form-group">
                            <label for="whatkindofroom">Raum Typ</label>
                            <select id="Type" name="whatkindofroom" class="form-select" asp-for="room.KindOfRoom" size="1" aria-label="">
                                <option value="all" selected>All</option>
                                <option value="PC-Raum">PC-Raum</option>
                                <option value="Vorlesungssaal">Vorlesungssaal</option>
                                <option value="Medienraum">Medienraum</option>
                                <option value="Labor">Labor</option>
                            </select>
                        </div>
                    </div>
                </div>
                <div class="card">
                    <!--
                    <div class="card-header">
                        <h1>Suche nach einem freien Block</h1>
                    </div>
                    -->

                    <div class="card-body">
                        <div class="form-group">
                            <label for="inputDate">Datum</label>
                            <input type="date" id="inputDate" class="form-control" asp-for="ticket.date" min="@DateTime.Now.ToString("yyyy-MM-dd")" max="@DateTime.Now.AddDays(14).ToString("yyyy-MM-dd")"/>
                        </div>
                        
                        <div class="form-group">
                            <label for="inputNumber">block</label>
                            <input type="number" id="inputNumber" class="form-control" asp-for="ticket.block" min="1" max="8"/>
                        </div>
                    </div>

                    <div class="card-footer">
                        <button type="submit" class="btn btn-primary">Suchen</button>
                    </div>
                </div>
            </form>
        </div>

        <div class="col">
        @{
            //create buttens with some extra attributes
            //they have to be in a form, because i couldnt hide the buttens by them self
            foreach (var item in ViewBag.Rooms)
            {
                    
                        <button type="button" class="roomButton btn btn-primary" roomsize="@item.RoomSize" roomtype="@item.KindOfRoom" >@item.RoomName</button>
                    
            }
        }
        </div>

        <div id="iFrameContainer" class="col">
            <!--
                the Jave Script will insert the i frame if a room is selected(clicked)
            -->
        </div>

    </div>
</div>
